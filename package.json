{
  "name": "tailwind-to-inline",
  "version": "1.0.0",
  "description": "Utility for converting Tailwind-styled HTML templates into inline-styled HTML",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "start": "ts-node index.ts",
    "build": "rm -rf dist && tsc --outDir dist --declaration --declarationDir dist",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "keywords": [
    "tailwind",
    "inline",
    "style",
    "html",
    "template"
  ],
  "author": "Vardan Hakobyan",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "juice": "^11.0.0",
    "postcss": "^8.4.43",
    "tailwindcss": "^3.4.10"
  }
}
